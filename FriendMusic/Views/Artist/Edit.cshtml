@model FriendMusic.ViewModels.ArtistEditViewModel

@{
    ViewData["Title"] = "Edit Artist";
}

<h2>Edit Artist - @Model.Name</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" /> <!-- Hidden field for Id -->

    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Biography" class="control-label">Biography</label>
        <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
