@model FriendMusic.Models.Friendship

@{
    ViewData["Title"] = "Delete Friendship Request";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Are you sure you want to delete this friendship request?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Requester
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Requester.UserName)
        </dd>
        <!-- Display other properties as needed -->
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
