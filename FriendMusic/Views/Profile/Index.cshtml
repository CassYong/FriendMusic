@model FriendMusic.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <!-- Profile Card -->
    <div class="card shadow">
        <div class="card-body">
            <div class="row">
                <!-- Profile Information Section -->
                <div class="col-md-6 mb-3">
                    <h5 class="card-title">Profile Information</h5>
                    <hr />
                    <div>
                        <h6>First Name:</h6>
                        <p>@Model.FirstName</p>
                    </div>
                    <div>
                        <h6>Last Name:</h6>
                        <p>@Model.LastName</p>
                    </div>
                    <div>
                        <h6>Email:</h6>
                        <p>@Model.Email</p>
                    </div>
                </div>

                <!-- Statistics Section -->
                <div class="col-md-6">
                    <h5 class="card-title">Statistics</h5>
                    <hr />
                    <div>
                        <h6><a href="/Social/Index" class="statistic-link">Number of Friends in List:</a></h6>
                        <p><a href="/Social/Index" class="statistic-link">@Model.FriendCount</a></p>
                    </div>
                    <div>
                        <h6><a href="/Music/Library" class="statistic-link">Number of Music Tracks:</a></h6>
                        <p><a href="/Music/Library" class="statistic-link">@Model.MusicCount</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons Section -->
    <div class="mt-4 text-center">
        <!-- Edit Profile Button -->
        <a asp-action="EditProfile" class="btn btn-primary mr-3">Edit Profile</a>
        <!-- Delete Profile Button -->
        <a asp-action="Delete" class="btn btn-danger">Delete Profile</a>
    </div>

    <!-- Success Message Display -->
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success mt-3">
            @ViewBag.Message
        </div>
    }
</div>

<!-- Custom Styles -->
<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
    }

    h6 {
        font-size: 0.9rem;
        font-weight: bold;
        color: #555;
        margin-bottom: 0.3rem; /* Adjust spacing */
    }

    p {
        font-size: 0.9rem;
        color: #777;
        margin-top: 0.3rem; /* Adjust spacing */
    }

    /* Style for statistics links */
    .statistic-link {
        color: black; /* Default color */
        text-decoration: none; /* Remove underline */
        transition: color 0.3s; /* Smooth transition for color change */
    }

        .statistic-link:hover {
            color: #17a2b8; /* Hover color */
        }
</style>
